</html>


<style>

:root {
    --icon-color-light: #000; 
    --icon-color-dark: #fff; 
}

a.cursor-pointer {
    transition: transform 0.3s ease; 
    display: inline-block; 
}

a.cursor-pointer:hover {
    transform: translateY(-2px);
}

#themeToggle {
    border: 0;
    background: none;
  }
  .sun { fill: black; }
  .moon { fill: transparent; }

  :global(.dark) .sun { fill: transparent; }
  :global(.dark) .moon { fill: white; }

</style>


<script>

document.getElementById('menuButton').addEventListener('click', function() {
        document.getElementById('menuItems').classList.toggle('hidden');
    });

document.getElementById("idiomas-button").addEventListener('click', () => {
    document.getElementById('idioma-details').classList.toggle('hidden')
})

const $btnTheme = document.querySelector<HTMLButtonElement>("#btn-theme")

$btnTheme?.addEventListener("click", () => {
    const html = document.children[0]

    html.classList.toggle("dark")
})


</script>